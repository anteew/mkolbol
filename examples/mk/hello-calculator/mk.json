{
  "nodes": [
    {
      "id": "number-generator",
      "module": "TimerSource",
      "params": {
        "periodMs": 1000
      }
    },
    {
      "id": "transformer",
      "module": "UppercaseTransform"
    },
    {
      "id": "console-output",
      "module": "ConsoleSink",
      "params": {
        "prefix": "[hello-calc]"
      }
    }
  ],
  "connections": [
    {
      "from": "number-generator.output",
      "to": "transformer.input"
    },
    {
      "from": "transformer.output",
      "to": "console-output.input"
    }
  ]
}
