{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint File Schema (ampcode.json/devex.json)",
  "type": "object",
  "required": ["ampcode", "waves", "tasks", "branch"],
  "additionalProperties": true,
  "properties": {
    "ampcode": {
      "type": "string"
    },
    "branch": {
      "type": "string"
    },
    "waves": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "parallel", "tasks"],
        "properties": {
          "id": {
            "type": "string"
          },
          "parallel": {
            "type": "boolean"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "agent", "title", "allowedFiles", "verify", "deliverables"],
        "properties": {
          "id": {
            "type": "string"
          },
          "agent": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "why": {
            "type": "string"
          },
          "allowedFiles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "verify": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "deliverables": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    },
    "branch_instructions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "sprint_logging": {
      "type": "object"
    },
    "instructions": {
      "type": "object",
      "required": ["expectations", "logging", "briefing", "parallelization"],
      "properties": {
        "briefing": { "type": "string", "minLength": 1 },
        "overview": {
          "type": "string"
        },
        "hooks": {
          "type": "object",
          "properties": {
            "eslint_dryrun": {
              "type": "object",
              "properties": {
                "summary": { "type": "string" },
                "example": { "type": "string" }
              },
              "required": ["summary", "example"]
            }
          },
          "additionalProperties": true
        },
        "expectations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "logging": {
          "type": "object",
          "required": ["log_file", "schema", "example"],
          "properties": {
            "log_file": {
              "type": "string",
              "pattern": "^(ampcode\\.log|devex\\.log)$"
            },
            "schema": {
              "type": "string"
            },
            "example": {
              "type": "string"
            }
          }
        },
        "parallelization": {
          "type": "object",
          "required": ["policy", "rationale"],
          "properties": {
            "policy": { "type": "string", "enum": ["prefer_parallel", "prefer_serial"] },
            "rationale": { "type": "string", "minLength": 1 },
            "candidates": { "type": "array", "items": { "type": "string" } },
            "constraints": { "type": "array", "items": { "type": "string" } },
            "max_concurrency": { "type": "integer", "minimum": 1 },
            "suggested_splits": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["taskId", "subtasks"],
                "properties": {
                  "taskId": { "type": "string" },
                  "subtasks": { "type": "array", "items": { "type": "string" } }
                }
              }
            }
          },
          "additionalProperties": true
        },
        "deliverables_global": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "knowledge": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "workflow": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
