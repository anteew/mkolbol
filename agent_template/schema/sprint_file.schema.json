{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint File Schema (ampcode.json/devex.json)",
  "type": "object",
  "required": ["ampcode", "waves", "tasks", "branch"],
  "additionalProperties": true,
  "properties": {
    "ampcode": {"type": "string"},
    "branch": {"type": "string"},
    "waves": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "parallel", "tasks"],
        "properties": {
          "id": {"type": "string"},
          "parallel": {"type": "boolean"},
          "depends_on": {"type": "array", "items": {"type": "string"}},
          "tasks": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "agent", "title", "allowedFiles", "verify", "deliverables"],
        "properties": {
          "id": {"type": "string"},
          "agent": {"type": "string"},
          "title": {"type": "string"},
          "why": {"type": "string"},
          "allowedFiles": {"type": "array", "items": {"type": "string"}},
          "verify": {"type": "array", "items": {"type": "string"}},
          "deliverables": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": true
      }
    },
    "branch_instructions": {"type": "array", "items": {"type": "string"}},
    "sprint_logging": {"type": "object"}
  }
}
